#login-dropdown-list
	.dropdown-menu
		min-width:	300px;
		padding: 15px;
		box-shadow: 0 3px 6px rgba(0,0,0, .16), 0 3px 6px rgba(0,0,0, .23)
		border-radius: 2px
	  
		.or
			margin: 5px 0;
			text-align: center;
		  
		.btn
			margin-top: 5px;

		input
			margin:0 0 -1px;
			border-radius: 0px !important;
	
		input:last-of-type
			margin-bottom: 20px;
		  
		#login-other-options
			text-align: center
		  
		.alert-danger
			background: none
			color: #F44336
		  
		.alert-success
			background: none
			color: #0F9D58

		  
.modal-backdrop
	opacity: 0.75;

#login-buttons-reset-password-modal, #login-buttons-enroll-account-modal, #login-buttons-email-address-verified-modal
	.modal-content
		margin-top: 30%;

.login-buttons-dropdown-align-left
	&#login-buttons + li
		.dropdown-menu
			float: left;
			left: 0;
			right: auto;
.login-buttons-dropdown-align-right
	&#login-buttons + li
		.dropdown-menu
			float: right;
			right: 0;
			left: auto;

#login-buttons
	display: none;

#login-dropdown-list a
	cursor: pointer;

#configure-login-service-dialog-modal
	position: fixed;
	left: 50%;
	margin-left: -300px;
  
.btn-Facebook{
	color: white;
	background-color: #3B5998;
}
.btn-Google{
	color: white;
	background-color: #D34836;
}
.btn-Twitter{
	color: white;
	background-color: #4099FF;
}
